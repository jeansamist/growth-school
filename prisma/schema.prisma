generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id    Int    @id @default(autoincrement())
  cover String
  name  String
  items Item[]
}

model Tag {
  id    Int         @id @default(autoincrement())
  cover String
  name  String
  items TagOnItem[]
}

model Item {
  id          Int         @id @default(autoincrement())
  title       String
  description String
  price       Int
  cover       String
  files       File[]
  discount    Int?
  categoryId  Int
  author      String?
  isbn        String?
  language    String?
  pages       Int?
  edition     String?
  date        String?
  category    Category    @relation(fields: [categoryId], references: [id])
  tags        TagOnItem[]
}

model TagOnItem {
  itemId Int
  item   Item @relation(fields: [itemId], references: [id])
  tagId  Int
  tag    Tag  @relation(fields: [tagId], references: [id])

  @@id([itemId, tagId])
}

model File {
  id     Int     @id @default(autoincrement())
  title  String?
  url    String
  itemId Int
  item   Item    @relation(fields: [itemId], references: [id])
}
